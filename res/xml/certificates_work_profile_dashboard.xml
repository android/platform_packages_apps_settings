<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="manage_certificates_screen"
    android:title="@string/manage_certificates"
    settings:keywords="@string/keywords_certificates">

    <PreferenceCategory
        android:key="user_credentials_category"
        android:layout="@layout/preference_category_no_label">

        <PreferenceCategory
            android:key="user_credentials"
            android:layout="@layout/preference_category_no_label"/>

        <com.android.settingslib.RestrictedPreference
            android:key="install_certificate"
            android:title="@string/credentials_install"
            android:icon="@drawable/ic_add_24dp"
            android:fragment="com.android.settings.security.InstallCertificateFromStorage"
            settings:userRestriction="no_config_credentials" />

        <com.android.settingslib.RestrictedPreference
            android:key="credentials_reset"
            android:title="@string/credentials_reset_summary"
            android:icon="@drawable/ic_delete"
            settings:userRestriction="no_config_credentials">

            <intent
                android:action="com.android.credentials.RESET"
                android:targetPackage="com.android.settings" />

        </com.android.settingslib.RestrictedPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="trusted_credentials_category"
        android:persistent="false"
        android:order="100"
        android:layout="@layout/preference_category_no_label">

<!--        <Preference-->
<!--            android:key="trusted_credentials"-->
<!--            android:title="@string/trusted_credentials"-->
<!--            android:summary="@string/trusted_credentials_summary"-->
<!--            android:fragment="com.android.settings.security.TrustedCredentialsSettings" />-->


    </PreferenceCategory>
</PreferenceScreen>





